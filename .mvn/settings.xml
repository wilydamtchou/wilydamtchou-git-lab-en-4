<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0
          http://maven.apache.org/xsd/settings-1.1.0.xsd">

    <!-- Configure Maven wagon for better network resilience -->
    <servers>
        <server>
            <id>central</id>
            <configuration>
                <httpConnectionManager>
                    <dnsResolver implementation="org.apache.maven.wagon.providers.http.HttpWagonHttpConnectionManager"/>
                </httpConnectionManager>
                <httpWagon>
                    <usePreemptiveAuthentication>false</usePreemptiveAuthentication>
                </httpWagon>
            </configuration>
        </server>
    </servers>

    <!-- Mirror configuration for reliability -->
    <mirrors>
        <mirror>
            <id>central</id>
            <name>Maven Central Repository</name>
            <url>https://repo.maven.apache.org/maven2</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
    </mirrors>

    <!-- Profile for CI/CD environments -->
    <profiles>
        <profile>
            <id>ci-build</id>
            <properties>
                <maven.wagon.http.retryHandler.class>standard</maven.wagon.http.retryHandler.class>
                <maven.wagon.http.retryHandler.count>5</maven.wagon.http.retryHandler.count>
                <maven.wagon.http.retryHandler.requestSentEnabled>true</maven.wagon.http.retryHandler.requestSentEnabled>
                <maven.wagon.httpconnectionmanager.ttlsecs>60</maven.wagon.httpconnectionmanager.ttlsecs>
            </properties>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>ci-build</activeProfile>
    </activeProfiles>

</settings>
