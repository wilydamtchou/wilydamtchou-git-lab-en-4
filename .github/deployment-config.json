{
  "deployment_configuration": {
    "version": "1.0",
    "created_at": "2026-02-06",
    "project": "demo-pipeline",
    "runner_type": "self-hosted",
    "machine_info": {
      "os": "macOS (Apple Silicon)",
      "shell": "zsh",
      "docker_version": "28.5.1",
      "docker_compose_version": "2.40.3",
      "git_version": "2.50.1"
    },
    "workflows": {
      "ci": {
        "file": ".github/workflows/ci.yml",
        "trigger": ["push (all branches)", "pull_request (main)"],
        "jobs": {
          "build": {
            "runner": "ubuntu-latest",
            "description": "Build and verify application"
          },
          "cucumber": {
            "runner": "ubuntu-latest",
            "description": "Run Cucumber tests"
          },
          "newman": {
            "runner": "ubuntu-latest",
            "description": "Run Newman/Postman tests"
          },
          "deploy_dev": {
            "runner": "self-hosted",
            "description": "Deploy to DEV environment",
            "condition": "main branch only"
          }
        }
      },
      "deploy_dev": {
        "file": ".github/workflows/deploy-dev.yml",
        "trigger": "pull_request (main)",
        "runner": "self-hosted",
        "script": "scripts/deploy-dev.sh"
      },
      "deploy_qa": {
        "file": ".github/workflows/deploy-qa.yml",
        "trigger": "workflow_dispatch (manual)",
        "runner": "self-hosted",
        "script": "scripts/deploy-qa.sh"
      },
      "manual_deploy": {
        "file": ".github/workflows/manual-deploy.yml",
        "trigger": "workflow_dispatch (manual)",
        "runner": "self-hosted",
        "description": "Interactive deployment with environment selection",
        "options": ["dev", "qa"]
      }
    },
    "deployment_scripts": {
      "deploy_dev": {
        "path": "scripts/deploy-dev.sh",
        "executable": true,
        "actions": [
          "Build Docker image: docker build -t demo-pipeline:latest .",
          "Start DEV environment: docker compose -f docker-compose-dev.yml up -d"
        ]
      },
      "deploy_qa": {
        "path": "scripts/deploy-qa.sh",
        "executable": true,
        "actions": [
          "Build Docker image: docker build -t demo-pipeline:latest .",
          "Start QA environment: docker compose -f docker-compose-qa.yml up -d"
        ]
      },
      "health_check": {
        "path": "scripts/check-runner.sh",
        "executable": true,
        "description": "Verify all deployment prerequisites"
      }
    },
    "docker_configuration": {
      "dev": {
        "compose_file": "docker-compose-dev.yml",
        "image": "demo-pipeline:latest"
      },
      "qa": {
        "compose_file": "docker-compose-qa.yml",
        "image": "demo-pipeline:latest"
      }
    },
    "documentation": {
      "setup_guide": "GITHUB_ACTIONS_SETUP.md",
      "deployment_guide": "DEPLOYMENT_GUIDE.md",
      "changes_summary": "CHANGES_SUMMARY.md"
    },
    "monitoring": {
      "check_runner_status": "bash scripts/check-runner.sh",
      "view_containers": "docker ps",
      "view_logs": "docker logs demo-pipeline",
      "runner_logs": "tail -f ~/actions-runner/_diag/Runner_*.log"
    },
    "troubleshooting": {
      "runner_not_appearing": {
        "description": "Runner not visible in GitHub Actions",
        "solution": [
          "Check if runner is active: ps aux | grep actions-runner",
          "Restart runner: cd ~/actions-runner && ./run.sh",
          "Check logs: tail -f ~/actions-runner/_diag/Runner_*.log"
        ]
      },
      "docker_not_accessible": {
        "description": "Docker permission or access issues",
        "solution": [
          "Verify Docker is running: docker ps",
          "Check permissions: groups $USER | grep docker",
          "Restart Docker if needed"
        ]
      },
      "deployment_fails": {
        "description": "Deployment script execution fails",
        "solution": [
          "Run script manually: bash scripts/deploy-dev.sh",
          "Check GitHub Actions logs",
          "Verify Docker image: docker images | grep demo-pipeline",
          "Check container logs: docker logs demo-pipeline"
        ]
      }
    },
    "endpoints": {
      "health_check": "http://localhost:8080/hello",
      "api": "http://localhost:8080/api"
    },
    "deployment_apis": {
      "deploy_dev_api": {
        "endpoint": "POST /api/deployment/deploy-dev",
        "description": "Trigger DEV deployment via REST API",
        "available_after": "Local Spring Boot application deployment"
      },
      "deploy_qa_api": {
        "endpoint": "POST /api/deployment/deploy-qa",
        "description": "Trigger QA deployment via REST API",
        "available_after": "Local Spring Boot application deployment"
      }
    },
    "status": {
      "health_check_result": "PASSED (13/13)",
      "docker_status": "RUNNING",
      "runner_status": "READY",
      "configuration_status": "COMPLETE"
    }
  }
}
